---
export interface Props {
    title: string;
}

import "@fontsource/raleway/variable-full.css";
import Navbar from "../components/navbar.astro";
import Footer from "../components/footer.astro";

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>{title}</title>
        <meta name="viewport" content="width=device-width" />
        <meta
            name="description"
            content="Ezra Chai's personal page that shows what he does in his carrier and his motif."
        />
        <link
            rel="apple-touch-icon"
            sizes="180x180"
            href="/apple-touch-icon.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="/favicon-32x32.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href="/favicon-16x16.png"
        />
        <link rel="manifest" href="/site.webmanifest" />
        <meta
            name="google-site-verification"
            content="2idB28BG6UO_Q5gXgdzfuQGXL1SNWWEOoIWTxbNh6VU"
        />
        <meta name="generator" content={Astro.generator} />
    </head>
    <body class="dark:bg-zinc-900">
        <Navbar />
        <slot />
        <Footer />
        <script is:inline>
            const theme = (() => {
                if (
                    typeof localStorage !== "undefined" &&
                    localStorage.getItem("theme")
                ) {
                    return localStorage.getItem("theme");
                }
            })();

            if (theme === "light") {
                document.documentElement.classList.remove("dark");
            } else {
                document.documentElement.classList.add("dark");
            }
            window.localStorage.setItem("theme", theme);
        </script>
    </body>
    <style>
        html {
            font-family: "Raleway", system-ui, sans-serif !important;
        }

        * {
            scrollbar-width: thin;
            scrollbar-color: black white;
        }

        *::-webkit-scrollbar {
            width: 12px; /* width of the entire scrollbar */
        }

        *::-webkit-scrollbar-track {
            @apply bg-white dark:bg-black; /* color of the tracking area */
        }

        *::-webkit-scrollbar-thumb {
            border: 3px solid black; /* creates padding around scroll thumb */
            @apply rounded-full border-white bg-black dark:border-black dark:bg-white;
        }
    </style>
</html>
