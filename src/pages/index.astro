---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/navbar.astro';

const response = await fetch(
	'https://api-us-east-1.hygraph.com/v2/cl7onpa6g3ca001um2dezbwm8/master',
	{
		method: 'POST',
		headers: {
			'Content-Type': 'application/json',
      		Accept: 'application/json',
		},
		body: JSON.stringify({
      query: `
        {
          sections {
			image {
      			width
      			height
      			url
    		}
          }
        }
      	`,
    	}),
	}
)

const homePage = await response.json()
const data = homePage.data.sections[0]
---

<Layout title="ezrachai">
	<Navbar/>
	<div class="py-10 max-w-7xl mx-auto grid grid-cols-2 dark:text-white">
		<div class=" col-span-2">
			<h1 class="text-5xl font-bold text-center max-w-lg mx-auto leading-[1.2]">Simplicity. <br> Aesthetics. Value.</h1>
			<p class="max-w-lg mx-auto text-lg text-center mt-10 font-medium dark:text-zinc-400">Hi there, I'm an Frontend Engineer & Student focused on digital design for brands that like to have fun.</p>
		</div>
		<div class="py-20 overflow-hidden col-span-2">
			<div class="flex justify-center">
				<img src={data.image.url} width={data.image.width/1.5} height={data.image.height/1.5} alt={"Image"}>
			</div>
		</div>
	</div>
</Layout>